<style>
    .page-navbar_horizontal {
        height: 10%;
        max-height: 120px;
    }

    .page-navbar_horizontal ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    .page-navbar_horizontal li {
        display: inline-block;
        width: 15%;
        text-align: center;
    }

    .page-navbar_horizontal li a:hover {
        color: white;
        transition: 0.5s;
    }

