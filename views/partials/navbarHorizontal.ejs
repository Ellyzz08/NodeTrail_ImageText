<nav class="page-navbar_horizontal slds-p-horizontal_large">
    <div class="slds-grid slds-grid--vertical-align-center">
        <div class="slds-col slds-size_1-of-6 ">
            <div class="slds-p-around_medium">
                <a href="/"><img src="img/home_qbranchLogo.png" style="height:auto; max-width:60px;" /></a>
            </div>
        </div>
        <div class="slds-col slds-size_5-of-6">
            <ul class="slds-text-align_right">
                <li class="nav-item_horizontal" name="facebook">
                    <a href="/facebook" class="nav-horizontal_action">Facebook Ad</a>
                </li>
                <li class="nav-item_horizontal" name="facebookpost">
                    <a href="/facebook-post" class="nav-horizontal_action">Facebook Post</a>
                </li>
                <li class="nav-item_horizontal" name="instagram-post">
