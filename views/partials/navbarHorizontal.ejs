</nav>


<script>
    $(document).ready(function () {
        var page = window.location.href.split('/').slice(-1)[0];
        $("div.page-navbar_horizontal li").removeClass("page-is-active");
        $("div.page-navbar_horizontal li[name='" + page + "'").addClass("page-is-active");
    });
</script>