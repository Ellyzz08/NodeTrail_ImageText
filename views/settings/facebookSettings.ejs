
<div class="container page-settings">


    <!--AdvertiserName-->
    <%- include('../helper/inputtext', {id:'fb-leadad-pagename', placeholder:'', label:'Page Name'})%>

    <!--LOGO IMAGE SETTING-->
    <div class="page-setting-element">
        <%- include('../helper/imagefileselector', {imageselectorlabel:'Page Logo:',imgInputId:'fb_setPageLogoImage', helptext:'100 * 100 (.png .jpg .jpeg)'}) %>
    </div>

    <!--Ad Text-->
    <div class="slds-form-element">
        <label class="slds-form-element__label" for="fb-leadad-text">Text</label>
        <div class="slds-form-element__control">
        <textarea id="fb-leadad-text" class="slds-textarea" placeholder="Your Text Here"></textarea>
        </div>
    </div>

    <!--POST IMAGE SETTING-->
    <div class="page-setting-element">
        <%- include('../helper/imagefileselector', {imageselectorlabel:'Post Image:',imgInputId:'fb_setPostImage', helptext:'1200 * 628 (.png .jpg .jpeg)'}) %>
    </div>

    <!--Ad Headline-->
    <%- include('../helper/inputtext', {id:'fb-leadad-headline', placeholder:'Your Headline Here', label:'Headline'})%>

    <!--Ad LinkDescription-->
    <%- include('../helper/inputtext', {id:'fb-leadad-linkdescription', placeholder:'Your Link Description Here', label:'Link Description'})%>

    <!--Ad LinkDescription-->
    <%- include('../helper/inputtext', {id:'fb-leadad-caption', placeholder:'Your Caption Here', label:'Caption'})%>

    <!--Ad CTA-->
    <div class="slds-form-element">
            <label class="slds-form-element__label" for="fb-leadad-cta">Call To Action</label>
            <div class="slds-form-element__control">
                    <div class="slds-select_container">
                        <select class="slds-select" id="fb-leadad-cta">
                            <option value="Learn More">Learn More</option>
                        </select>
                    </div>
            </div>
    </div>

    <!--Reaction Number-->
    <div class="slds-form-element">
        <label class="slds-form-element__label" for="fb-leadad-numberofreactions">Number of Reactions</label>
        <div class="slds-form-element__control">
            <input type="number" id="fb-leadad-numberofreactions" class="slds-input" placeholder="" />
        </div>
    </div>

    <!--Comments Number-->
    <div class="slds-form-element">
        <label class="slds-form-element__label" for="fb-leadad-numberofcomments">Number of Comments</label>
        <div class="slds-form-element__control">
            <input type="number" id="fb-leadad-numberofcomments" class="slds-input" placeholder="" />
        </div>
    </div>

    <!--Shares Number-->
    <div class="slds-form-element">
        <label class="slds-form-element__label" for="fb-leadad-numberofshares">Number of Shares</label>
        <div class="slds-form-element__control">
            <input type="number" id="fb-leadad-numberofshares" class="slds-input" placeholder="" />
        </div>
    </div>

    <!--Likes-->
    <fieldset class="slds-form-element">
        <legend class="slds-form-element__legend slds-form-element__label">Reactions</legend>
        <div class="slds-form-element__control">
            <div class="slds-grid">
                <div class="slds-col">
                    <span class="slds-checkbox">
                        <input type="checkbox" name="options" id="checkbox-3" value="checkbox-3" />
                        <label class="slds-checkbox__label" for="checkbox-3">
                            <span class="slds-checkbox_faux"></span>
                            <span class="slds-form-element__label"><img class="fb-likes_icons" src="img/fb_reaction_like.png"/></span>
                        </label>
                    </span>
                    <span class="slds-checkbox">
                        <input type="checkbox" name="options" id="checkbox-4" value="checkbox-4" />
                        <label class="slds-checkbox__label" for="checkbox-4">
                            <span class="slds-checkbox_faux"></span>
                            <span class="slds-form-element__label"><img  class="fb-likes_icons" src="img/fb_reaction_haha.png"/></span>
                        </label>
                    </span>

                </div>

                <div class="slds-col">
                        <span class="slds-checkbox">
                            <input type="checkbox" name="options" id="checkbox-3" value="checkbox-3" />
                            <label class="slds-checkbox__label" for="checkbox-3">
                                <span class="slds-checkbox_faux"></span>
                                <span class="slds-form-element__label"><img  class="fb-likes_icons" src="img/fb_reaction_love.png"/></span>
                            </label>
                        </span>
                        <span class="slds-checkbox">
                            <input type="checkbox" name="options" id="checkbox-4" value="checkbox-4" />
                            <label class="slds-checkbox__label" for="checkbox-4">
                                <span class="slds-checkbox_faux"></span>
                                <span class="slds-form-element__label"><img  class="fb-likes_icons" src="img/fb_reaction_sad.png"/></span>
                            </label>
                        </span>

                    </div>

                <div class="slds-col">
                    <span class="slds-checkbox">
                        <input type="checkbox" name="options" id="checkbox-3" value="checkbox-3" />
                        <label class="slds-checkbox__label" for="checkbox-3">
                            <span class="slds-checkbox_faux"></span>
                            <span class="slds-form-element__label"><img  class="fb-likes_icons" src="img/fb_reaction_wow.png"/></span>
                        </label>
                    </span>
                    <span class="slds-checkbox">
                        <input type="checkbox" name="options" id="checkbox-4" value="checkbox-4" />
                        <label class="slds-checkbox__label" for="checkbox-4">
                            <span class="slds-checkbox_faux"></span>
                            <span class="slds-form-element__label"><img class="fb-likes_icons" src="img/fb_reaction_angry.png"/></span>
                        </label>
                    </span>

                </div>
            </div>
            
        </div>
    </fieldset>


</div>

<script>
    var fbLeadadCtaOptions = [
        "Learn More","Sign Up","Subscribe","Apply Now","Get Quote","Download"
    ];

    var $select = $('#fb-leadad-cta'); 
    $select.find('option').remove();  
    $.each(fbLeadadCtaOptions,function(index, value) 
    {
        $select.append('<option value=' + value + '>' + value + '</option>');
    });

</script>
